<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>


<AnchorPane xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MainController">
   <children>
      <ImageView fitHeight="449.0" fitWidth="492.0" layoutX="71.0" layoutY="10.0" opacity="0.24" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../BGD.png" />
         </image>
      </ImageView>
      <BorderPane prefHeight="400.0" prefWidth="600.0">
         <top>
            <HBox alignment="CENTER" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Quiz Application">
                     <font>
                        <Font name="Nyala" size="48.0" />
                     </font>
                     <effect>
                        <DropShadow color="#00000085" height="15.07" radius="7.035" width="15.07" />
                     </effect>
                  </Label>
               </children>
               <BorderPane.margin>
                  <Insets top="10.0" />
               </BorderPane.margin>
            </HBox>
         </top>
         <center>
            <VBox alignment="TOP_CENTER" spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <Label prefHeight="60.0" prefWidth="155.0" text="Please choose an option" VBox.vgrow="ALWAYS">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <HBox alignment="CENTER" prefHeight="77.0" prefWidth="436.0" spacing="20.0" VBox.vgrow="ALWAYS">
                     <children>
                        <RadioButton fx:id="r1" mnemonicParsing="false" onAction="#radioButtonMain" text="Professor" HBox.hgrow="ALWAYS">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </RadioButton>
                        <RadioButton fx:id="r2" mnemonicParsing="false" onAction="#radioButtonMain" text="Student" HBox.hgrow="ALWAYS">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </RadioButton>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="53.0" prefWidth="436.0" spacing="10.0" VBox.vgrow="ALWAYS">
                     <children>
                        <PasswordField fx:id="p1" alignment="CENTER" prefHeight="25.0" prefWidth="183.0" promptText="Password" visible="false" HBox.hgrow="ALWAYS" />
                        <TextField fx:id="name" alignment="CENTER" prefHeight="25.0" prefWidth="280.0" promptText="Name" visible="false" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                     <children>
                        <Button mnemonicParsing="false" onAction="#buttonEnter" prefHeight="36.0" prefWidth="66.0" text="Enter" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
               </children>
               <BorderPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </BorderPane.margin>
            </VBox>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
